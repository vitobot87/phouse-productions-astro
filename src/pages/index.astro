---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;

const projects = [
  {
    slug: "protimer",
    title: "ProTimer",
    status: "active",
    description: "An interval timer application designed for workouts and productivity. Track your intervals with precision and customize your timing needs.",
    tags: ["mobile", "productivity", "fitness"],
    image: "protimer-hero.png",
    logo: "protimer-logo.png",
    links: [
      { label: "Visit Website", url: "https://timer.phouseproductions.com/", type: "primary" },
      { label: "iOS App", url: "https://apps.apple.com/ca/app/protimer-interval-timer/id1505852514", type: "secondary" },
    ]
  },
  {
    slug: "rploop",
    title: "RPLOOP",
    status: "active",
    description: "NFT-based generative piano music platform. Unique compositions generated algorithmically and stored as NFTs on the blockchain.",
    tags: ["blockchain", "nft", "music", "web3"],
    image: "rploop-hero.jpg",
    logo: "rploop-logo.webp",
    links: [
      { label: "View Collection", url: "https://rploop.com/", type: "secondary" },
    ]
  },
  {
    slug: "challenge-tracker",
    title: "Challenge Tracker",
    status: "active",
    description: "A fitness goal-tracking application that helps you stay accountable and motivated. Track your progress, set goals, and achieve your fitness challenges.",
    tags: ["fitness", "mobile", "tracking", "goals"],
    image: "challenge-tracker-hero.png",
    logo: "challenge-tracker-logo.png",
    links: [
      { label: "Web App", url: "https://ct.phouseproductions.com/", type: "primary" },
    ]
  },
  {
    slug: "easy-strength",
    title: "Easy Strength",
    status: "active",
    description: "A minimalist strength training companion app that simplifies program adherence with flexible exercise substitutions within Pavel Tsatsouline's time-tested protocol framework.",
    tags: ["fitness", "web", "strength-training", "productivity"],
    image: "easy-strength-hero.png",
    logo: "easy-strength-logo.png",
    links: [
      { label: "Try App", url: "https://easy-strength.phouseproductions.com/", type: "primary" },
    ]
  },
  {
    slug: "journal",
    title: "Journal & Workout Logger",
    status: "active",
    description: "A flexible journaling and workout logging application that combines daily reflections with fitness tracking in a unified, web-accessible platform.",
    tags: ["journaling", "fitness", "web", "productivity", "pwa"],
    image: "journal-hero.png",
    logo: "journal-logo.png",
    links: [
      { label: "Open App", url: "https://journal.phouseproductions.com/", type: "primary" },
    ]
  },
  {
    slug: "noviluxe",
    title: "Novi Luxe",
    status: "active",
    description: "Private hair artistry and custom lash extensions. Premium beauty services in Mississauga, ON.",
    tags: ["web", "beauty", "business"],
    image: "noviluxe-hero.png",
    logo: "noviluxe-logo.png",
    links: [
      { label: "Visit Website", url: "https://noviluxe.ca/", type: "primary" },
    ]
  },
];
---

<Layout title="pHouse Productions | Web & App Development">
  <main class="min-h-screen">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-[#0a0a0a]/80 backdrop-blur-md border-b border-gray-200/50 dark:border-gray-800/50">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href={base} class="flex items-center gap-3">
            <img src={`${base}favicon.png`} alt="pHouse" class="w-8 h-8 rounded-lg" />
            <span class="font-semibold text-[#0a0a0a] dark:text-white">pHouse Productions</span>
          </a>
          <div class="flex items-center gap-4">
            <nav class="hidden md:flex items-center gap-6">
              <a href="#projects" class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary transition-colors">Projects</a>
              <a href="#contact" class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary transition-colors">Contact</a>
            </nav>
            <button onclick="toggleTheme()" class="p-2 rounded-lg bg-[#f5f3f7] dark:bg-[#1a1625] hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors" aria-label="Toggle dark mode">
              <span class="dark:hidden text-gray-600">üåô</span>
              <span class="hidden dark:inline text-gray-300">‚òÄÔ∏è</span>
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="max-w-3xl">
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight mb-6 gradient-text leading-tight">
            pHouse Productions
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-10 leading-relaxed">
            We specialize in web development, app development, and custom software solutions. With over a decade of experience, we deliver practical, user-focused applications.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="#projects" class="px-8 py-4 bg-primary hover:bg-primary-hover text-white rounded-xl font-semibold text-lg shadow-xl glow-primary transition-all">
              View Projects
            </a>
            <a href="#contact" class="px-8 py-4 rounded-xl font-semibold text-lg border-2 border-gray-200 dark:border-gray-700 hover:border-primary dark:hover:border-primary transition-all">
              Get in Touch
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20 px-4 bg-[#f5f3f7] dark:bg-[#1a1625]">
      <div class="max-w-6xl mx-auto">
        <div class="mb-16 text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">Featured Projects</h2>
          <p class="text-gray-600 dark:text-gray-400 text-xl max-w-2xl mx-auto">
            A selection of our recent work and ongoing projects
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-10">
          {projects.map((project) => (
            <a 
              href={`${base}projects/${project.slug}/`}
              class="group bg-white dark:bg-[#0a0a0a] rounded-2xl overflow-hidden border border-gray-100 dark:border-gray-800 hover:border-primary/50 dark:hover:border-primary/50 transition-all hover:shadow-2xl"
            >
              <!-- Project Image -->
              <div class="relative h-64 bg-[#f5f3f7] dark:bg-[#1a1625] overflow-hidden">
                <img 
                  src={`${base}${project.image}`} 
                  alt={project.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <!-- Logo -->
                {project.logo && (
                  <div class="absolute bottom-4 left-4 w-16 h-16 bg-white/90 dark:bg-black/80 backdrop-blur-md rounded-xl p-2 shadow-xl">
                    <img 
                      src={`${base}${project.logo}`} 
                      alt={`${project.title} logo`}
                      class="w-full h-full object-contain"
                    />
                  </div>
                )}
              </div>

              <!-- Project Info -->
              <div class="p-8">
                <div class="flex items-start justify-between mb-4">
                  <h3 class="text-2xl font-bold group-hover:text-primary transition-colors">
                    {project.title}
                  </h3>
                  <span class={`text-xs px-3 py-1.5 rounded-full font-semibold ${
                    project.status === 'active' 
                      ? 'bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-300' 
                      : 'bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-300'
                  }`}>
                    {project.status}
                  </span>
                </div>
                
                <p class="text-gray-600 dark:text-gray-400 mb-6 line-clamp-2 leading-relaxed">
                  {project.description}
                </p>
                
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.tags.map((tag) => (
                    <span class="text-sm px-3 py-1 rounded-full bg-[#f5f3f7] dark:bg-[#1a1625] text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-700">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <div class="text-primary font-bold group-hover:translate-x-2 transition-transform inline-flex items-center gap-2">
                  Learn more <span>‚Üí</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="max-w-3xl mx-auto text-center rounded-3xl p-16 border-2 border-gray-100 dark:border-gray-800 hover:border-primary/30 dark:hover:border-primary/30 transition-all">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">Let's Work Together</h2>
          <p class="text-gray-600 dark:text-gray-400 text-xl mb-12 leading-relaxed">
            Have a project in mind? We'd love to hear from you and discuss how we can help bring your ideas to life.
          </p>
          <a 
            href="https://www.linkedin.com/in/mikecarcasole/" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-12 py-5 bg-primary hover:bg-primary-hover text-white rounded-xl font-bold text-xl shadow-xl glow-primary transition-all"
          >
            Connect on LinkedIn
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-4 border-t border-gray-100 dark:border-gray-800">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="flex items-center gap-3">
          <img src={`${base}favicon.png`} alt="pHouse" class="w-6 h-6 rounded" />
          <span class="text-sm text-gray-600 dark:text-gray-400">pHouse Productions</span>
        </div>
        <p class="text-sm text-gray-500">¬© {new Date().getFullYear()} pHouse Productions. All rights reserved.</p>
      </div>
    </footer>
  </main>
</Layout>
