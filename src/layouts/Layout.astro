---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "We specialize in web development, app development, and custom software solutions. With over a decade of experience, we deliver practical, user-focused applications." } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={`${base}favicon.png`} />
    <link rel="apple-touch-icon" href={`${base}apple-icon.png`} />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-[#0a0a0a] text-[#0a0a0a] dark:text-[#f8fafc] font-sans antialiased transition-colors duration-300">
    <slot />
    <script is:inline>
      const getTheme = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      };
      const setTheme = (theme) => {
        document.documentElement.classList.toggle('dark', theme === 'dark');
        localStorage.setItem('theme', theme);
      };
      setTheme(getTheme());
      window.toggleTheme = () => {
        const current = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
        setTheme(current === 'dark' ? 'light' : 'dark');
      };
    </script>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  /* Gradient text animation */
  @keyframes gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .gradient-text {
    background: linear-gradient(135deg, #D96541, #2D3789, #D96541);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient 4s ease infinite;
  }
  
  /* Glow effect */
  .glow-primary {
    box-shadow: 0 0 20px rgba(217, 101, 65, 0.3), 0 0 40px rgba(217, 101, 65, 0.2);
  }
  
  .glow-primary:hover {
    box-shadow: 0 0 30px rgba(217, 101, 65, 0.5), 0 0 60px rgba(217, 101, 65, 0.3);
  }
</style>
